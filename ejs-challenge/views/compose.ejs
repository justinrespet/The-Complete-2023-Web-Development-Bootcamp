<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="mb-3">
        <label for="blogPost" class="form-label">Post</label>
        <textarea name="blogPost" class="form-control" rows="5"></textarea>
    </div>
    
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>